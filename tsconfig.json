{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "esnext"
    ],
    "module": "esNext",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [ "node_modules/@types" ],
    "baseUrl": "./src",
    "paths": {
      "assets": ["/assets/*"],
      "common": ["/common/*"],
      "components": ["/components/*"],
      "pages": ["/pages/*"],
      "request": ["/request/*"],
      "router": ["/router/*"],
      "store": ["/store/*"],
      "styles": ["/styles/*"],
      "views": ["/views/*"],
      "static": ["../static/*"]
    }
  }
}
